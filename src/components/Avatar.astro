---
const { name, avatar, time } = Astro.props
---

<article class="avatar">
  <img src={avatar} alt={name} />
  <div class="info">
    <h3>{name}</h3>
    <time datetime={time}>{time}</time>
  </div>
</article>
<style>
  .avatar {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .avatar img {
    width: 50px;
    height: 50px;
    border-radius: 50%;
  }
  .info {
    display: flex;
    flex-direction: column;
  }
  .info h3 {
    margin: 0;
    font-size: 1.2rem;
  }
  .info time {
    color: #666;
    font-size: 0.9rem;
  }
</style>
