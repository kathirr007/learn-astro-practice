---
import Heading from '@/components/ui/Heading.astro'
import { getCollection } from 'astro:content'

const features = await getCollection('features')
---

<section aria-label="Features Section" class="features">
  <div>
    <Heading tagName="h2" tagSize="h2"> I build fast, sleek, modern websites. </Heading>
    <ul role="list">
      {
        features.map(({ data }) => (
          <li>
            <Fragment set:html={data.icon} />
            <Heading tagName="h3" tagSize="h4">
              {data.title}
            </Heading>
            <p>{data.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>
