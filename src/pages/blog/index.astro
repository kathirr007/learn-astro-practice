---
import BaseLayout from '@/layouts/BaseLayout.astro'

// Import multiple files with Astro.glob
const posts = await Astro.glob('./*.{md,mdx}')
---

<BaseLayout title="Blog">
  <h1>Blog page</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
