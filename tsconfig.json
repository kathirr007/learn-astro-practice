{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // Needed for TypeScript intellisense in the template inside Vue files
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [".astro/types.d.ts", "**/*", "./src/types/*.type.ts"],
  "exclude": ["dist"]
}
